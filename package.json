{
  "name": "telegram-moderator-bot",
  "version": "1.0.0",
  "description": "Telegram bot for chat moderation with AI-powered anti-spam",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:bot": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:bot": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop telegram-bot",
    "restart:pm2": "pm2 restart telegram-bot",
    "logs:pm2": "pm2 logs telegram-bot",
    "test": "echo \"No tests yet\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t telegram-bot .",
    "docker:run": "docker run -d --name telegram-bot --env-file .env -p 3000:3000 telegram-bot",
    "docker:stop": "docker stop telegram-bot && docker rm telegram-bot",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "check:production": "node scripts/production-check.js",
    "webhook:set": "node scripts/webhook-setup.js",
    "webhook:delete": "curl -X POST \"https://api.telegram.org/bot$BOT_TOKEN/deleteWebhook\""
  },
  "dependencies": {
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "googleapis": "^153.0.0",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/pdfkit": "^0.17.1",
    "eslint": "^8.57.0",
    "pm2": "^5.4.3",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "telegram",
    "bot",
    "moderation",
    "anti-spam",
    "ai",
    "webhook",
    "production",
    "open-source"
  ],
  "author": "",
  "license": "MIT"
}
